<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <img src="/static/img/man.png" alt="details-image">
        </article>

        <article class="details-page-card-content">
            <p>Author: {{add.owner.email}}</p>
            <h2>Headline: {{add.headline}}</h2>
            <h3>Company name: {{add.company}}</h3>
            <h4>Company description: {{add.description}}</h4>
            <h5>Location: {{add.location}}</h5>

            <article class="details-page-card-buttons">
                {{#if user}}
                    {{#if add.isOwner}}
                        <a href="/add/{{add._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/add/{{add._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                        {{#if add.hasApplied}}
                            <p class="already-applied">You have already applied!</p>
                        {{else}}
                            <a href="/add/{{add._id}}/apply" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, {{add.usersCount}} people have already applied.</p>
                        {{/if}}
                    {{/if}}
                {{/if}}
            </article>
        </article>

    </article>
</section>


{{#if add.isOwner}}
<section id="info-about-candidates">
    <h2>Candidates for this ad:</h2>
    {{#if add.usersCount}}
    {{#each add.users}}
    {{> candidate}}
    {{/each}}
    {{/if}}
</section>
{{/if}}