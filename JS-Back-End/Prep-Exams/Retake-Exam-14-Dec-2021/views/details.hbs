<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{art.title}}</h2>
            <h3>Author: {{art.owner.username}}</h3>
            <h3>Painting technique: {{art.technique}}</h3>
            <h3>Certificate of authenticity: {{art.certificate}}</h3>

            {{#if user}}
            <div class="buttons">
                {{#if art.isOwner}}
                <a href="/art/{{art._id}}/edit" class="btn-edit">Edit</a>
                <a href="/art/{{art._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                    {{#unless art.hasShared}}
                    <a href="/art/{{art._id}}/share" class="btn-share">Share publication</a>
                    {{else}}
                    <p class="shared-pub">You already shared this publication</p>
                    {{/unless}}
                {{/if}}
            </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            <img src="{{art.picture}}" alt="art-image2">
        </article>

    </article>
</section>