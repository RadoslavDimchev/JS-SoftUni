<section id="gallery">
    <h1>Gallery</h1>
    <article class="gallery-container">
        {{#if arts}}
        {{#each arts}}
        {{> galleryArt}}
        {{/each}}
        {{else}}
        <article class="no-available-publications">
            <h1>No publications created yet.</h1>
            <a href="/art/create" class="create-pub">Create publication</a>
        </article>
        {{/if}}
    </article>
</section>